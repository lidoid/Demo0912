<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<EditText
    android:id="@+id/ve_yanzheng"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:hint="验证码"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ver_btton"
        android:text="验证码"
        android:layout_alignBaseline="@+id/ve_yanzheng"
        android:layout_alignBottom="@+id/ve_yanzheng"
        android:layout_toRightOf="@+id/ve_yanzheng"
        android:layout_toEndOf="@+id/ve_yanzheng" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="111dp"
        android:text="登陆"
        android:layout_below="@+id/ver_btton"
        android:layout_toRightOf="@+id/ve_yanzheng"
        android:layout_toEndOf="@+id/ve_yanzheng" />
</RelativeLayout>
